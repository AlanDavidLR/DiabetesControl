<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item> <!-- Color del texto -->
       <!-- Fondo personalizado -->
        <item name="android:textStyle">bold</item> <!-- Estilo del texto -->
        <item name="android:padding">12dp</item> <!-- Espacio interno -->
        <item name="android:gravity">center</item> <!-- AlineaciÃ³n del texto -->

    </style>
    <!-- Button style -->
    <style name="button">
        <item name="cornerRadius">20dp</item>
    </style>
    <!-- Base layout color -->
    <style name="linear_layout_vertical">
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="linear_layout_horizontal">
        <item name="android:gravity">center</item>
        <item name="backgroundColor">@color/snow</item>
    </style>
    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorPrimary">@color/snow</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">

        <item name="android:popupBackground">@color/white</item>

        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="android:dropDownSelector">@color/white</item>

        <item name="android:dropDownVerticalOffset">4dp</item>

    </style>
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="CustomHelperTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSpinnerTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CustomTextInputLayoutErrorTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="LoginTextStyle">

        <item name="android:textSize">18sp</item>

        <item name="android:textColor">#FFFFFF</item>

        <item name="android:textStyle">bold</item>

        <item name="android:textAlignment">center</item>

    </style>
    <style name="SansSerifText">

        <item name="android:fontFamily">sans-serif</item>

    </style>


    <style name="SerifText">

        <item name="android:fontFamily">serif</item>

    </style>
    <style name="OpenSansText">

        <item name="android:fontFamily">@font/open_sans</item>

    </style>


    <style name="LatoText">

        <item name="android:fontFamily">@font/lato</item>

    </style>


    <style name="MontserratText">

        <item name="android:fontFamily">@font/montserrat</item>

    </style>
    <style name="PlayfairDisplayText">

        <item name="android:fontFamily">@font/playfair_display</item>

    </style>
    <style name="CustomFont">
        <item name="android:fontFamily">@font/blackregular</item>
    </style>


</resources>